{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "outDir": "../../dist/clr-core",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "importHelpers": true,
    "composite": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@clr/core/*": ["./*"]
    }
  },
  "exclude": ["**/test/*.ts", "test.ts", "**/*.spec.ts", "dist", "node_modules"],
  "references": [{ "path": "./common" }],
  "typedocOptions": {
    "out": "./src/dev-core/src/api",
    "readme": "none",
    "includes": ["/src/clr-core/**/*.ts"],
    "exclude": [
      "**/node_modules/**",
      "**/*.e2e-spec.*",
      "**/*.po.*",
      "**/*.spec.*",
      "**/*.css.ts",
      "**/*.d.*",
      "**/*.styles.*",
      "**/test/*.ts",
      "**/index.ts"
    ],
    "includeDeclarations": false,
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true
  }
}
